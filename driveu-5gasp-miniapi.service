[Unit]
Description=DriveU 5GASP MiniAPI service
StartLimitIntervalSec=1
StartLimitBurst=2

[Service]
Type=simple
WorkingDirectory=/home/me/driveu/NetworkAppControl-MiniAPI
Environment=PYTHONPATH=$PYTHONPATH:src
ExecStart=/usr/bin/python3 -m uvicorn main:app --host=0.0.0.0  --port=3001
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
